#!/bin/bash
#SBATCH -J NCSX
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=64
##SBATCH -n 64
#SBATCH --time=01:30:00
#SBATCH --mem=128G
#SBATCH -p sched_mit_psfc_r8
#SBATCH -o C1stdout

export SLURM_CPU_BIND="cores"

touch started

# partition mesh
PARTS=8
$M3DC1_MPIRUN -n $PARTS split_smb circle-858.smb part.smb $PARTS
echo $? > mesh_partitioned

$M3DC1_MPIRUN -n $SLURM_NTASKS m3dc1_3d_st -options_file options_bjacobi1

# Run M3D-C1
echo $command
eval $command

touch finished

